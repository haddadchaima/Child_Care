<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relative_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txt_title_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toxic_com"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:alpha="0.59"
            android:fontFamily="@font/abel_regular"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:alpha="0.35"
            android:fontFamily="@font/abel_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:text="12:34 PM"
            android:textColor="@color/text_primary"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative_txt"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mama always said life was like a box of chocolates. You never know whatâ€¦"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:alpha="0.59"
            android:fontFamily="@font/abel_regular"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/img_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unread_detail"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>